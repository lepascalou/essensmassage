<header
  class="py-5 text-center text-white min-vh-100 d-flex align-items-center"
>
  <div class="container">
    <h1 class="display-2 pb-5"><%= t.hero.title %></h1>
    <p class="lead"><%= t.hero.subtitle %></p>
    <a
      href="<%= t.hero.ctaHash %>"
      class="scroll-arrow"
      aria-label="<%= t.hero.ariaLabel %>"
      style="
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        left: 50%;
        bottom: 40px;
        transform: translateX(-50%);
        z-index: 10;
        transition: transform 0.2s;
        animation: bounce 2s infinite;
        cursor: pointer;
        text-decoration: none;
      "
    >
      <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
        <circle cx="24" cy="24" r="24" fill="rgba(255,255,255,0.85)" />
        <path
          d="M16 22l8 8 8-8"
          stroke="#A08660"
          stroke-width="3"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </a>
  </div>
</header>
