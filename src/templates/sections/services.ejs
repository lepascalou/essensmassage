<section
  id="<%= lang === 'fr' ? 'soins' : 'services' %>"
  class="py-5 min-vh-100 d-flex align-items-center bg-dark bg-opacity-25"
>
  <div class="container px-4 py-5">
    <h2 class="pb-2 text-white text-center"><%= t.services.heading %></h2>
    <div
      class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5 justify-content-center"
    >
      <div class="col">
        <div class="card h-100 overflow-hidden text-bg-light rounded-4">
          <div class="d-flex flex-column h-100 p-5 text-white">
            <h3 class="card-header text-center"><%= t.services.tuina.title %></h3>
            <div class="card-body">
              <p class="card-text">
                <%= t.services.tuina.description %>
              </p>
            </div>
            <a href="#contact" class="text-center"
              ><button type="button" class="btn btn-outline-light">
                <%= t.services.tuina.cta %>
              </button></a
            >
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 overflow-hidden text-bg-light rounded-4">
          <div
            class="d-flex flex-column h-100 p-5 text-white text-shadow-1"
          >
            <h3 class="card-header text-center"><%= t.services.sports.title %></h3>
            <div class="card-body">
              <p class="card-text">
                <%= t.services.sports.description %>
              </p>
            </div>
            <a href="#contact" class="text-center"
              ><button type="button" class="btn btn-outline-light">
                <%= t.services.sports.cta %>
              </button></a
            >
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100 overflow-hidden text-bg-light rounded-4">
          <div
            class="d-flex flex-column h-100 p-5 text-white text-shadow-1"
          >
            <h3 class="card-header text-center"><%= t.services.relaxing.title %></h3>
            <div class="card-body">
              <p class="card-text">
                <%= t.services.relaxing.description %>
              </p>
            </div>
            <a href="#contact" class="text-center"
              ><button type="button" class="btn btn-outline-light">
                <%= t.services.relaxing.cta %>
              </button></a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
